<div id="<%= dom_id contact %>">
  <div class="c-contact-info">
    <div class="c-contact-name">
      <h3>
        <%= contact.first_name %> <%= contact.last_name %>
      </h3>
    </div>
    <div class="c-contact-number">
      <p><span class="fa-solid fa-phone"></span><%= contact.phone_number %></p>
    </div>
  </div>
  <div class="c-contact-delete-show">
    <%= link_to contacts_path, class: "btn btn-back" do %>
      <span class="fas fa-arrow-left"></span> Back
    <% end %>
    <%= link_to edit_contact_path(contact), class: "btn btn-edit" do %>
      <span class="fas fa-pen"></span> Edit
    <% end %>
    <%= button_to  @contact, method: :delete, class: "btn btn-danger" do %>
      <span class="fas fa-trash-can"></span> Delete
    <% end %>
  </div>
</div>
